
دالة في_الفصل (): ثـنائي {
    القائمة_العائمة.مكن_التجاوز()؛
    عرف مشهد:مـشهد؛
    عرف سيف:مـلصق؛
    عرف تلاميذ:مـلصق؛
    عرف معلمة:مـلصق؛
    عرف صوت_الضحك: صـوت؛

    انتظر(مـؤجلات.مـؤجلة[صـحيح].الكل({
        مشهد.حمل_خلفية(نـص("رسوم/القصة/في_الفصل/الفصل.png")، 4)،
        سيف.هيئ(نـص("رسوم/القصة/في_الفصل/سيف")، 4)،
        تلاميذ.هيئ(نـص("رسوم/القصة/في_الفصل/تلاميذ")، 4)،
        معلمة.هيئ(نـص("رسوم/القصة/في_الفصل/معلمة")، 4)،
        صوت_الضحك.هيئ(نـص("أصوات/القصة/في_الفصل/PUPL0-4.WAV"))
    }).تجاهل_النتيجة())؛

    معلمة.ضع(27*4، 48*4)؛
    سيف.ضع(200*4، 100*4)؛
    مشهد.أضف_ملصقات({معلمة، سيف})؛

    أظهر_رويدا(مشهد، 1000)؛

    //بدأ الحديث
    اعرض_محادثة(مشهد، مـصفوفة_كلام({
        كـلام(
            "أصوات/القصة/في_الفصل/TECH0-1.WAV"،
            نـص("مرحبًا أعزائي التلاميذ.")،
            66*4، 56*4، 20*4، 30، معلمة، 0، 1، 700
        )،
        كـلام(
            "أصوات/القصة/في_الفصل/TECH0-2.WAV"،
            نـص("لقد أحضرت نتائج امتحان\n"
                "الرياضيات السابق.")،
            66*4، 56*4، 20*4، 35، معلمة، 0، 1، 200
        )،
        كـلام(
            "أصوات/القصة/في_الفصل/TECH0-3.WAV"،
            نـص("وقد كانت نتائجكم جيدة\n"
                "ما عدا تلميذًا واحدًا.")،
            66*4، 56*4، 20*4، 35، معلمة، 0، 1، 700
        )،
        كـلام(
            "أصوات/القصة/في_الفصل/TECH0-4.WAV"،
            نـص("سيف... لقد أخذت\n"
                "صفرًا في الامتحان!")،
            66*4، 56*4، 20*4، 30، معلمة، 0، 1، 200
        )،
    }))؛
    تحقق_من_التجاوز_والعودة[]؛
    سيف.الحالي = 1؛
    اعرض_محادثة(مشهد، مـصفوفة_كلام({
        كـلام(
            "أصوات/القصة/في_الفصل/BOBO0-1.mp3"،
            نـص("ماذا!؟ صفر!؟")،
            200*4، 122*4، 20*4، 150،  سيف، 2، 1، 200
        )،
        كـلام(
            "أصوات/القصة/في_الفصل/TECH0-5.WAV"،
            نـص("أريد أن أرى والدك\n"
                "غدًا. هل فهمت؟")،
            66*4، 56*4، 20*4، 30، معلمة، 0، 1، 200
        )،
    }))؛
    تحقق_من_التجاوز_والعودة[]؛
    سيف.الحالي = 3؛
    اعرض_محادثة(مشهد، مـصفوفة_كلام({
        كـلام(
            "أصوات/القصة/في_الفصل/BOBO0-2.mp3"،
            نـص("حاضر")،
            200*4، 122*4، 20*4، 150،  سيف، 3، 4، 200
        )،
    }))؛
    تحقق_من_التجاوز_والعودة[]؛
    تلاميذ.ضع(100*4، 86*4)؛
    مشهد.أضف_ملصق(تلاميذ)؛
    اعرض_محادثة(مشهد، مـصفوفة_كلام({
        كـلام(
            "أصوات/القصة/في_الفصل/PUPL0-1.WAV"،
            نـص("سوف يوبخه والداه\n"
                "في البيت، هي هي هي")،
            140*4، 84*4، 20*4، 50،  تلاميذ، 0، 1، 200
        )،
    }))؛
    تحقق_من_التجاوز_والعودة[]؛
    تلاميذ.الحالي = 2؛
    تلاميذ.ضع(148*4، 100*4)؛
    اعرض_محادثة(مشهد، مـصفوفة_كلام({
        كـلام(
            "أصوات/القصة/في_الفصل/PUPL0-2.WAV"،
            نـص("إنه يستحق ذلك،\n"
                "فهو كسول.")،
            150*4، 96*4، 20*4، 110،  تلاميذ، 2، 3، 200
        )،
    }))؛
    تحقق_من_التجاوز_والعودة[]؛
    تلاميذ.الحالي = 4؛
    تلاميذ.ضع(249*4، 98*4)؛
    اعرض_محادثة(مشهد، مـصفوفة_كلام({
        كـلام(
            "أصوات/القصة/في_الفصل/PUPL0-3.WAV"،
            نـص("أعتقد أنه لا يعرف\n"
                "كيف يعد اصابعه!")،
            255*4، 98*4، 20*4، 120،  تلاميذ، 4، 5، 200
        )،
    }))؛
    تحقق_من_التجاوز_والعودة[]؛
    صوت_الضحك.شغل(0)؛

    تمهل(500)؛
    أخف_رويدا(مشهد، 1000)؛
    أرجع 1؛
}؛

دالة في_غرفة_النوم (): ثـنائي {
    القائمة_العائمة.مكن_التجاوز()؛
    عرف مشهد:مـشهد؛
    عرف خلفية: مـلصق؛
    عرف سيف:مـلصق؛
    عرف صوت_المعلمة: صـوت؛
    عرف صوت_التلميذ: صـوت؛
    عرف صوت_الضحك: صـوت؛

    انتظر(مـؤجلات.مـؤجلة[صـحيح].الكل({
        خلفية.هيئ(نـص("رسوم/القصة/في_غرفة_النوم/غرفة_النوم")، 4، 0، 0)،
        سيف.هيئ(نـص("رسوم/القصة/في_غرفة_النوم/سيف_النائم")، 4، 140*4، 110*4)،
        صوت_المعلمة.هيئ(نـص("أصوات/القصة/في_غرفة_النوم/تذكر_صوت_المعلمة.WAV"))،
        صوت_التلميذ.هيئ(نـص("أصوات/القصة/في_غرفة_النوم/تخيل_النكتة.WAV"))،
        صوت_الضحك.هيئ(نـص("أصوات/القصة/في_غرفة_النوم/تخيل_الضحك.WAV"))
    }).تجاهل_النتيجة())؛
    مشهد.أضف_ملصقات({ خلفية، سيف })؛
    سيف.شفافية = 0؛

    أظهر_رويدا(مشهد، 1000)؛

    // شغل أصوات تذكر أحداث اليوم
    صوت_المعلمة.شغل(0)؛
    تمهل_مع_تمكين_التجاوز_والعودة[3500]؛
    صوت_التلميذ.شغل(0)؛
    تمهل_مع_تمكين_التجاوز_والعودة[2700]؛
    صوت_الضحك.شغل(0)؛
    تمهل_مع_تمكين_التجاوز_والعودة[2000]؛

    سيف.شفافية = 255
    تمهل_مع_تمكين_التجاوز_والعودة[300]؛

    خلفية.الحالي = 1؛
    سيف.الحالي = 1؛

    تمهل_مع_تمكين_التجاوز_والعودة[300]؛
    سيف.شفافية = 0؛
    تمهل_مع_تمكين_التجاوز_والعودة[2000]؛
    أخف_رويدا(مشهد، 1000)؛
    أرجع 1؛
}؛

دالة خارج_مدينة_الرياضيات (): ثـنائي {
    القائمة_العائمة.مكن_التجاوز()؛
    عرف مشهد:مـشهد؛
    انتظر(مشهد.حمل_خلفية(نـص("رسوم/القصة/خارج_مدينة_الرياضيات/مدينة_الرياضيات1.png")، 4))؛

    أظهر_رويدا(مشهد، 1000)؛

    اعرض_محادثة(مشهد، مـصفوفة_كلام({
        كـلام(
            "أصوات/القصة/خارج_مدينة_الرياضيات/BOBO0-3.mp3"،
            نـص("مدينة الرياضيات!! لم أسمع بها من قبل.\جسأستكشفها.")،
            100*4، 150*4، 20*4، 45، 200
        )،
    }))؛
    تحقق_من_التجاوز_والعودة[]؛

    أخف_رويدا(مشهد، 1000)؛
    أرجع 1؛
}؛

دالة في_مدينة_الرياضيات (): ثـنائي {
    القائمة_العائمة.مكن_التجاوز()؛
    عرف مشهد:مـشهد؛
    عرف واحد:مـلصق؛

    انتظر(مـؤجلات.مـؤجلة[صـحيح].الكل({
        مشهد.حمل_خلفية(نـص("رسوم/القصة/في_مدينة_الرياضيات/مدينة_الرياضيات2.png")، 4)،
        واحد.هيئ(نـص("رسوم/القصة/في_مدينة_الرياضيات/الواحد")، 4)
    }).تجاهل_النتيجة())؛

    واحد.ضع(252*4، 110*4)؛
    مشهد.أضف_ملصق(واحد)؛

    أظهر_رويدا(مشهد، 1000)؛

    اعرض_محادثة(مشهد، مـصفوفة_كلام({
        كـلام(
            "أصوات/القصة/في_مدينة_الرياضيات/ONE0-1.WAV"،
            نـص("من أنت أيها الغريب؟")،
            259*4، 106*4، 20*4، 100، واحد، 0، 1، 200
        )،
        كـلام(
            "أصوات/القصة/في_مدينة_الرياضيات/BOBO0-4.mp3"،
            نـص("أنا سيف. جئت أستكشف المدينة.")،
            134*4، 113*4، 20*4، 60، 200
        )،
        كـلام(
            "أصوات/القصة/في_مدينة_الرياضيات/ONE0-2.WAV"،
            نـص("ونحن الفرسان التسعة. واجبنا\n"
                "أن نخلص المدينة من أفعال\n"
                "الصفر الشرير.")،
            259*4، 106*4، 20*4، 100، واحد، 0، 1، 200
        )،
        كـلام(
            "أصوات/القصة/في_مدينة_الرياضيات/BOBO0-5.mp3"،
            نـص("آآه.. هذا عمل نبيل.\جهل تسمحون لي بالانضمام إليكم؟")،
            134*4، 113*4، 20*4، 60، 200
        )،
        كـلام(
            "أصوات/القصة/في_مدينة_الرياضيات/ONE0-3.WAV"،
            نـص("بالتأكيد. وسنصبح إذن\n"
                "الفرسان العشرة!")،
            259*4، 106*4، 20*4، 100، واحد، 0، 1، 200
        )،
    }))؛
    تحقق_من_التجاوز_والعودة[]؛
    أخف_رويدا(مشهد، 1000)؛
    أرجع 1؛
}؛
