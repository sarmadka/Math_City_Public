صنف مـشهد_سياسة_الخصوصية {
    @حقنة عرف مركب: مـركب؛
    عرف قائمة_اللغة: سـندنا[قـائمة_اللغة]؛

    عملية هذا~هيئ() {
        عرف الكائن: سند[هذا_الصنف](هذا)؛
        هذا.المشهد = صـندوق().{
            الطراز.{
                أقصى_عرض = مـسافة.نقاط(800)؛
                العرض = مـسافة.مئوي(100)؛
                الطول = مـسافة.مئوي(100)؛
                المحاذاة = مـحاذاة._وسط_؛
                الإظهار = إظـهار._مرن_؛
                النسق = نـسق._عمود_؛
                ملء_السطر = مـلء_سطر._وسط_؛
            }؛
            أضف_فروع({
                قـائمة_اللغة(نـص("/privacy-policy")).{
                    الكائن.قائمة_اللغة = هذا؛
                }،
                مـبدال_توجيه().{
                    الطراز.{
                        العرض = مـسافة.مئوي(100)؛
                        المرونة = مـرونة(1)؛
                        فئة_الخط = "Arial, Helvetica, sans-serif"؛
                        حجم_الخط = مـسافة.نقاط(12)؛
                        ارتفاع_الكتابة = مـسافة.نقاط(20)؛
                    }؛
                    الطراز(">>$h1").{
                        ارتفاع_الكتابة = مـسافة.نقاط(25)؛
                    }؛
                    حدد_الانتقال(
                        أنشئ_انتقال_انزلاق_مبدال(0.5, 0، 1),
                        أنشئ_انتقال_انزلاق_مبدال(0.5, 0، 0)
                    )؛
                    مسار("^/privacy-policy/ar") = مغلفة(حـمولة_مسار): سـندنا[ودجـة] {
                        الكائن.قائمة_اللغة.غير_اللغة(نـص("ar"))؛
                        أرجع مـشهد_وثيقة().{
                            الطراز.{
                                الاتجاه = اتـجاه._من_اليمين_؛
                                الحشوة = مـسافة4.نقاط(20)؛
                                الطول = مـسافة.مئوي(100) - مـسافة.نقاط(44)؛
                                العرض = مـسافة.مئوي(100) - مـسافة.نقاط(44)؛
                                الفيض_ص = فـيض._تمرير_؛
                                الخلفية = خـلفية(لـون("fff"))؛
                                لون_الإطار = لـون("606060")؛
                                سمك_الإطار = مـسافة4.نقاط(2)؛
                                طراز_الإطار = طـراز_إطار._مستمر_؛
                            }؛
                            حدد_لتنف(نص_لتنف_من_ملف_ماركداون["سياسة_الخصوصية.md"])؛
                        }؛
                    }؛
                    مسار("^/privacy-policy/en") = مغلفة(حـمولة_مسار): سـندنا[ودجـة] {
                        الكائن.قائمة_اللغة.غير_اللغة(نـص("en"))؛
                        أرجع مـشهد_وثيقة().{
                            الطراز.{
                                الاتجاه = اتـجاه._من_اليسار_؛
                                الحشوة = مـسافة4.نقاط(20)؛
                                الطول = مـسافة.مئوي(100) - مـسافة.نقاط(44)؛
                                العرض = مـسافة.مئوي(100) - مـسافة.نقاط(44)؛
                                الفيض_ص = فـيض._تمرير_؛
                                الخلفية = خـلفية(لـون("fff"))؛
                                لون_الإطار = لـون("606060")؛
                                سمك_الإطار = مـسافة4.نقاط(2)؛
                                طراز_الإطار = طـراز_إطار._مستمر_؛
                            }؛
                            حدد_لتنف(نص_لتنف_من_ملف_ماركداون["privacy_policy.md"])؛
                        }؛
                    }؛
                }
            })؛
        }؛
    }

    عملية هذا_الصنف (): سـندنا[مـشهد_سياسة_الخصوصية] {
        أرجع سـندنا[مـشهد_سياسة_الخصوصية]().{ احجز()~هيئ() }؛
    }
}
