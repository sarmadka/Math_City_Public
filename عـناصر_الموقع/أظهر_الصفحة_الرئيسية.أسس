دالة أظهر_الصفحة_الرئيسية {
    عرف الصفحة_الرئيسية: سـندنا[الـصفحة_الرئيسية]؛
    عرف المشهد: سـندنا[صـندوق]؛
    تجهيز_الكابجا = ريـكابجا.هيئ_الواجهة()؛

    المشهد_الرئيسي.{
        الطراز.{
            المحاذاة = مـحاذاة._وسط_؛
            الهامش = مـسافة4.نقاط(0)؛
            الحشوة = مـسافة4.نقاط(0)؛
            الخلفية = خـلفية(لـون("000"))؛
            الطول = مـسافة.مئوي(100)؛
            الإظهار = إظـهار._مرن_؛
            النسق = نـسق._عمود_؛
            ملء_السطر = مـلء_سطر._بداية_؛
        }؛
        أزل_كل_الفروع()؛
        أضف_فروع({
            صـندوق().{
                المشهد = هذا؛
                الطراز.{
                    فئة_الخط = "SayfFont"؛
                    حجم_الخط = مـسافة.نقاط(25)؛
                    ارتفاع_الكتابة = مـسافة.نقاط(35)؛
                    الاتجاه = اتـجاه._من_اليمين_؛
                    أقصى_عرض = مـسافة.نقاط(800)؛
                    الطول = مـسافة.مئوي(100)؛
                    العرض = مـسافة.مئوي(100)؛
                    الإظهار = إظـهار._مرن_؛
                    النسق = نـسق._عمود_؛
                    المحاذاة = مـحاذاة._وسط_؛
                    الخلفية = خـلفية(نـص("/رسوم/خلفية_الموقع.jpg")، 0، 0، مـوقع_خلفية._فوق_، حـجم_خلفية._تغطية_)؛
                }؛
                أضف_فروع({
                    مـكداس_توجيه().{
                        الطراز.{
                            العرض = مـسافة.مئوي(100)؛
                            الطول = مـسافة.مئوي(100)؛
                        }؛
                        حدد_الانتقال(
                            أنشئ_انتقال_انزلاق_مكداس(0.5, 1, 0)،
                            أنشئ_انتقال_انزلاق_مكداس(0.5, 1, 1)
                        )؛
                        مسار(نـص("^/")) = مغلفة (الصفحة_الرئيسية: كسند)&(حـمولة_مسار): سـندنا[ودجـة] {
                            أرجع صـندوق().{
                                الطراز.{
                                    العرض = مـسافة.مئوي(100)؛
                                    الطول = مـسافة.مئوي(100)؛
                                    الفيض_ص = فـيض._تمرير_؛
                                }؛
                                أضف_فروع({
                                    الـصفحة_الرئيسية().{
                                        الصفحة_الرئيسية = هذا؛
                                    }
                                })؛
                            }؛
                        }؛
                        مسار(نـص("^/(contact|privacy-policy)")) = مغلفة(حمولة: حـمولة_مسار): سـندنا[ودجـة] {
                            أرجع صـندوق().{
                                الطراز.{
                                    العرض = مـسافة.مئوي(100) - مـسافة.نقاط(20)؛
                                    الطول = مـسافة.مئوي(100) - مـسافة.نقاط(20)؛
                                    الفيض_ص = فـيض._تمرير_؛
                                    الإظهار = إظـهار._مرن_؛
                                    النسق = نـسق._عمود_؛
                                    المحاذاة = مـحاذاة._وسط_؛
                                    الحشوة = مـسافة4.نقاط(10)؛
                                    الخلفية = خـلفية(لـون("CCC"))؛
                                }؛
                                إذا حمولة.المعطيات(0) == "contact" {
                                    أضف_فروع({ مـشهد_الاتصال() })؛
                                } وإلا {
                                    أضف_فروع({ مـشهد_سياسة_الخصوصية() })؛
                                }
                                أضف_فروع({
                                    ارتـباط_تشعبي().{
                                        الطراز.زخرفة_النص = زخـرفة_نص._بلا_؛
                                        العنوان = نـص("/")؛
                                        حدد_الفرع(كـتابة().{
                                            النص = نـص("أغــلق")؛
                                            الطراز.{
                                                الهامش = مـسافة4.نقاط(20، 0، 0، 0)؛
                                                لون_الخط = لـون(0، 100، 200)؛
                                            }؛
                                        })؛
                                        عند_الضغط.المبدئي_مكبوح = 1؛
                                        عند_الضغط.اربط(مغلفة (ودجة: سند[ودجـة]، حمولة: سند[صـحيح]) {
                                            نـافذة.النموذج.ادفع_مسارا("/")؛
                                        })؛
                                    }
                                })؛
                            }؛
                        }؛
                    }
                })؛
                عند_تغير_الأبعاد.اربط(مغلفة (الصفحة_الرئيسية: كسند)&(ودجة: سند[ودجـة]، حمولة: سند[صـحيح]) {
                    الصفحة_الرئيسية.قد_تغير_العرض(هذا.هات_الأبعاد().عرض)؛
                    إذا الصفحة_الرئيسية.شاشة_عريضة {
                        المشهد.الطراز.الخلفية = خـلفية(
                            نـص("/رسوم/خلفية_الموقع.jpg")، 0، 0، مـوقع_خلفية._فوق_، حـجم_خلفية._تغطية_
                        )؛
                    } وإلا {
                        المشهد.الطراز.الخلفية = خـلفية(لـون("6060c0"))؛
                    }
                })؛
            }
        })؛
    }؛

    الصفحة_الرئيسية.قد_تغير_العرض(1)؛
    عرف معرف_الإشارة: صـحيح_متكيف = نـافذة.النموذج.عند_استلام_رسالة.اربط(
        مغلفة (الصفحة_الرئيسية: كسند)&(نافذة: سند[نـافذة]، حمولة: سند[جـيسون]) {
            إذا حمولة("type")~مثل[نـص] == "app_install_prompt" {
                الصفحة_الرئيسية.أظهر_زر_التنصيب()؛
            }
        }
    )؛
    انتظر(الصفحة_الرئيسية.مؤجلة)؛
    نـافذة.النموذج.عند_استلام_رسالة.افصل(معرف_الإشارة)؛
}
