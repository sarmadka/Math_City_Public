دالة أظهر_صفحة_تسجيل_الدخول {
    المشهد_الرئيسي.{
        الطراز.{
            المحاذاة = مـحاذاة._وسط_؛
            الهامش = مـسافة4.نقاط(0)؛
            الحشوة = مـسافة4.نقاط(0)؛
            العرض = مـسافة.مئوي(100)؛
            الطول = مـسافة.مئوي(100)؛
            الخلفية = خـلفية(لـون(_لون_الخلفية_))؛
            الإظهار = إظـهار._مرن_؛
            النسق = نـسق._عمود_؛
            ملء_السطر = مـلء_سطر._وسط_؛
        }؛
        أزل_كل_الفروع()؛
        أضف_فروع({ صـندوق().{
            الطراز.{
                فئة_الخط = "SayfFont"؛
                حجم_الخط = مـسافة.نقاط(20)؛
                ارتفاع_الكتابة = مـسافة.نقاط(30)؛
                الاتجاه = اتـجاه._من_اليمين_؛
                أقصى_عرض = مـسافة.نقاط(400)؛
                الإظهار = إظـهار._مرن_؛
                النسق = نـسق._عمود_؛
                المحاذاة = مـحاذاة._وسط_؛
                الحشوة = مـسافة4.نقاط(20)؛
                نصف_قطر_الإطار = مـسافة4.نقاط(20)؛
                الخلفية = خـلفية(لـون("a8a8ff"))؛
            }؛
            أضف_فروع({
                كـتابة().{
                    الطراز.{
                        الهامش = مـسافة4.نقاط(0، 0، 15، 0)؛
                        لون_الخط = لـون(0، 0، 0)؛
                        محاذاة_النص = مـحاذاة_نص._وسط_؛
                    }؛
                    النص = نـص(
                        "احصل على النسخة الكاملة لمتابعة اللعب.\ج"
                        "افتح جميع المراحل بشكل دائم مقابل مبلغ مقطوع واستمتع باللعب على أي جهاز دون إعلانات."
                    )؛
                }،
                هـوية.كـبسة_مصادقة_جوجل(إعـدادات.معرف_تطبيق_جوجل، هات_موقع_إكمال_تسجيل_الدخول()، 0)
            })؛
        }})؛
    }؛

    نفذ_حلقة_معالجة_الأحداث()؛
}
