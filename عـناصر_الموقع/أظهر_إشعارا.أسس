دالة أظهر_إشعارا (نص_الإشعار: نـص، نص_الزر: نـص) {
    عرف مؤجلة: سـندنا[مـؤجلات.مـؤجلة[صـحيح]] = مـؤجلات.مـؤجلة[صـحيح].أنشئ()؛

    المشهد_الرئيسي.{
        الطراز.{
            المحاذاة = مـحاذاة._وسط_؛
            الهامش = مـسافة4.نقاط(0)؛
            الحشوة = مـسافة4.نقاط(0)؛
            العرض = مـسافة.مئوي(100)؛
            الطول = مـسافة.مئوي(100)؛
            الخلفية = خـلفية(لـون(_لون_الخلفية_))؛
            الإظهار = إظـهار._مرن_؛
            النسق = نـسق._عمود_؛
            ملء_السطر = مـلء_سطر._وسط_؛
        }؛
        أزل_كل_الفروع()؛
        أضف_فروع({
            صـندوق().{
                الطراز.{
                    فئة_الخط = "SayfFont"؛
                    حجم_الخط = مـسافة.نقاط(25)؛
                    ارتفاع_الكتابة = مـسافة.نقاط(35)؛
                    الاتجاه = اتـجاه._من_اليمين_؛
                    أقصى_عرض = مـسافة.نقاط(800)؛
                    الإظهار = إظـهار._مرن_؛
                    النسق = نـسق._عمود_؛
                    المحاذاة = مـحاذاة._وسط_؛
                    الحشوة = مـسافة4.نقاط(20)؛
                    نصف_قطر_الإطار = مـسافة4.نقاط(20)؛
                    الخلفية = خـلفية(لـون(255، 255، 255))؛
                }؛
                أضف_فروع({
                    كـتابة().{
                        الطراز.{
                            الهامش = مـسافة4.نقاط(20)؛
                            لون_الخط = لـون(0، 0، 0)؛
                        }؛
                        النص = نص_الإشعار؛
                    }،
                    ارتـباط_تشعبي().{
                        الطراز.زخرفة_النص = زخـرفة_نص._بلا_؛
                        العنوان = نـص("#")؛
                        حدد_الفرع(كـتابة().{
                            النص = نص_الزر؛
                            الطراز.{
                                الهامش = مـسافة4.نقاط(20)؛
                                لون_الخط = لـون(0، 100، 200)؛
                            }؛
                        })؛
                        عند_الضغط.المبدئي_مكبوح = 1؛
                        عند_الضغط.اربط(مغلفة (سند[ودجـة]، سند[صـحيح]) {
                            // سننتظر تحميل الموارد أولا.
                            إذا تحميل_الموارد.الحالة != مـؤجلات.حـالة._مقرر_ ارجع؛
                            // سنشغل صوتا فارغًا لتمكين الأصوات على نظام iOS.
                            صوت_فارغ.شغل(0)؛
                            مؤجلة.قرر(0)؛
                        })؛
                    }
                })؛
            }
        })؛
    }؛

    انتظر(مؤجلة)؛
}
