صنف مـحاولات {
    عرف عدد_المحاولات : صحيح = 3؛
    عرف أقصى_المحاولات : صحيح = 0؛

    عرف _عرض_ : 50؛
    عرف محاولات: مـصفوفة[مـلصق]؛

    عملية هذا.هيئ(): سـندنا[مـؤجلات.مـؤجلة[صـحيح]] {
        أرجع مـؤجلات.مـؤجلة[مـلصق].الكل({
            حمل_ملصقا(نـص("رسوم/محاولات")، 4)،
            حمل_ملصقا(نـص("رسوم/محاولات")، 4)،
            حمل_ملصقا(نـص("رسوم/محاولات")، 4)
        }).اقبض(مغلفة (خ: سـندنا[خـطأ]، م: سند[مـؤجلات.مـؤجلة_قبض[مـصفوفة[مـلصق]]]) {
            م.أعد(اعرض_نافذة_إعادة_المحاولة()
                .ثم[مـصفوفة[مـلصق]](مغلفة (صـحيح، م2: سند[مـؤجلات.مـؤجلة[مـصفوفة[مـلصق]]]) {
                    م2.قرر(مـؤجلات.مـؤجلة[مـلصق].الكل({
                        حمل_ملصقا(نـص("رسوم/محاولات")، 4)،
                        حمل_ملصقا(نـص("رسوم/محاولات")، 4)،
                        حمل_ملصقا(نـص("رسوم/محاولات")، 4)
                    }))؛
                })
            )؛
        }).ثم[صـحيح](مغلفة (ملصقات: مـصفوفة[مـلصق]، م: سند[مـؤجلات.مـؤجلة[صـحيح]]) {
            هذا.محاولات = ملصقات؛
            هذا.محاولات(0).ضع(1280 - _عرض_، 0)؛
            هذا.محاولات(1).ضع(1280 - _عرض_ * 2، 0)؛
            هذا.محاولات(2).ضع(1280 - _عرض_ * 3، 0)؛
            م.قرر(0)؛
        })؛
    }

    عملية هذا.عين (عدد_المحاولات:صحيح، مشهد:سند[مـشهد]) {
        عرف ه: صحيح؛
        لكل ه=0، ه<3، ه++ {
            إذا ه+1<=عدد_المحاولات {
                مشهد.أضف_ملصق(هذا.محاولات(ه))
            } وإلا {
                مشهد.أزل_ملصق(هذا.محاولات(ه))
            }؛
        }؛
    }؛
}؛

