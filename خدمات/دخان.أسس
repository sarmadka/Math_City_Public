صنف دخـان {
    عرف ملصق: مـلصق؛

    عملية هذا.هيئ(): سـندنا[مـؤجلات.مـؤجلة[صـحيح]] {
        ارجع هذا.ملصق.هيئ(نـص("رسوم/مشهد1/في_الحديقة1/دخان")، 4)؛
    }

    عملية هذا.ارسم (مشهد:سند[مـشهد]، س:صحيح، ص:صحيح) {
        هذا.ملصق.ضع(س، ص)؛
        هذا.ملصق.الحالي=0؛
        مشهد.أضف_ملصق(هذا.ملصق)؛
        تمهل(100)؛
        هذا.ملصق.الحالي=1؛
        تمهل(100)؛
        هذا.ملصق.الحالي=2؛
        تمهل(100)؛
        مشهد.أزل_ملصق(هذا.ملصق)؛
        حدث()؛
    }؛
}

